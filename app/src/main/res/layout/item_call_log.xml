<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="ðŸ“ž"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name or Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/as_text"/>

            <TextView
                android:id="@+id/secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time â€¢ Duration"
                android:textSize="13sp"
                android:textColor="@color/as_subtext"/>
        </LinearLayout>

        <TextView
            android:id="@+id/recording_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="REC"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/as_primary"
            android:background="@color/as_chip_bg"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/as_divider"
        android:layout_marginTop="12dp"/>
</LinearLayout>
